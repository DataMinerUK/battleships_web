<div>

  <h2>Place your ships, Admiral <%= $visitor %></h2>


    <form method="POST">
      <label for="ship_type">Select ship type</label>
      <select id="ship_type" name="ship_type" value="ship">

        <% $ships.each do |ship| %>
         <option value='<%= ship %>'><%= ship %></option>
        <% end %>

      </select></br></br>
      <label for="coordinates">Select coordinates</label>
      <select name="x_coord" value="letter">
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
        <option value="E">E</option>
        <option value="F">F</option>
        <option value="G">G</option>
        <option value="H">H</option>
        <option value="I">I</option>
        <option value="J">J</option>
      </select>
      <select name="y_coord" value="number">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select></br></br>
      <label for="orientation">Select the ship's orientation</label>
      <select name="orientation" value="orientation">
        <option value="vertically">vertically</option>
        <option value="horizontally">horizontally</option>
      </select></br></br>

      <input type="submit" value="Place">


  <pre>
<%= @board %>
  </pre>

</div>
